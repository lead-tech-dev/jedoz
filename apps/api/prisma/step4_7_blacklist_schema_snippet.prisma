model Blacklist {
  id        String   @id @default(uuid())
  type      BlacklistType
  value     String
  reason    String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@unique([type, value])
}

enum BlacklistType {
  IP
  PHONE
  DEVICE
}
